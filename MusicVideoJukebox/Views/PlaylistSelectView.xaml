<UserControl x:Class="MusicVideoJukebox.Views.PlaylistSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicVideoJukebox.Views"
             xmlns:vms="clr-namespace:MusicVideoJukebox.Core.ViewModels;assembly=MusicVideoJukebox.Core"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mat="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vms:PlaylistSelectViewModel, IsDesignTimeCreatable=False}"
             >
    <Viewbox >
        <Grid Width="1050" Height="480" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="850"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Height="50" Width="40" 
                PreviewMouseLeftButtonDown="ScrollLeft_PreviewMouseDown"
                PreviewMouseLeftButtonUp="Scroll_Stop"
                MouseLeave="Scroll_StopOnLeave">
                <mat:MaterialIcon Kind="ChevronLeft"/>
            </Button>
            <Button Height="50" Width="40" Grid.Column="2" 
                    PreviewMouseLeftButtonDown="ScrollRight_PreviewMouseDown"
                    PreviewMouseLeftButtonUp="Scroll_Stop"
                    MouseLeave="Scroll_StopOnLeave">
                <mat:MaterialIcon Kind="ChevronRight"/>
            </Button>

            <ScrollViewer x:Name="scrollviewer" Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,90">
                <ItemsControl ItemsSource="{Binding Items}" HorizontalAlignment="Center" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <mah:Tile Width="250" Height="380" Cursor="Hand"
                                   TitleFontSize="16" HorizontalTitleAlignment="Center" FontWeight="Bold"
                                     VerticalContentAlignment="Top" >
                                <mah:Tile.Style>
                                    <Style TargetType="mah:Tile">
                                        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Gray10}" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </mah:Tile.Style>
                                <mah:Tile.InputBindings>
                                    <MouseBinding Gesture="LeftClick" 
                                                  Command="{Binding DataContext.SelectPlaylistCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" 
                                                 />
                                </mah:Tile.InputBindings>
                                <StackPanel>
                                    <Image Source="{Binding ImagePath}" Width="140" Height="140"/>
                                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" 
                                               TextWrapping="Wrap" TextAlignment="Center" Margin="5" />
                                    <TextBlock Width="140" Text="{Binding Description}" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" 
                                               TextWrapping="Wrap" TextAlignment="Center" Margin="5" />
                                </StackPanel>
                            </mah:Tile>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Viewbox>

</UserControl>
