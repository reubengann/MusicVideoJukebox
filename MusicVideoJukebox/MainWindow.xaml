<Window x:Class="MusicVideoJukebox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicVideoJukebox"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000"
        MouseDoubleClick="Window_MouseDoubleClick" MouseMove="Window_MouseMove"
        d:DataContext="{d:DesignInstance local:MainWindowDesignTimeViewModel, IsDesignTimeCreatable=True}">
    <Grid Background="Black">

        <MediaElement x:Name="player" LoadedBehavior="Manual" UnloadedBehavior="Manual" ScrubbingEnabled="True"/>
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="50 50">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Viewbox  Grid.Row="1" >
                <local:VideoInfoDisplay x:Name="VideoInfo"  Opacity="100" DataContext="{Binding InfoViewModel}"/>
            </Viewbox>
        </Grid>

        <Grid x:Name="VideoControls" Margin="15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="4" Margin="0 25 25 0" HorizontalAlignment="Right" Height="50" Width="50">Settings</Button>
            <ListView Grid.Row="2" Grid.Column="3" ItemsSource="{Binding VideoFiles}" 
                      SelectedIndex="{Binding SelectedIndex}"
                      Margin="0 0 0 10" Background="Black" Width="300" Foreground="White" HorizontalAlignment="Right"
                      Grid.ColumnSpan="2" SelectionMode="Single" MaxHeight="400"
                      />
            <StackPanel Grid.Column="2" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Grid.Column="2" Width="50" Content="Prev" Command="{Binding PrevCommand}"/>
                <Button Width="50" Content="Play" Command="{Binding PlayCommand}"/>
                <Button Grid.Column="1" Width="50" Content="Pause" Command="{Binding PauseCommand}"/>
                <Button Grid.Column="2" Width="50" Content="Stop" Command="{Binding StopCommand}"/>
                <Button Grid.Column="2" Width="50" Content="Next" Command="{Binding NextCommand}"/>
            </StackPanel>

            <Slider Grid.Row="3" Grid.Column="4" VerticalAlignment="Center" Maximum="1" Minimum="0" SmallChange="0.01" LargeChange="0.1" Value="{Binding Volume}"/>
            <Slider VerticalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="5" Maximum="{Binding VideoLengthSeconds}" Value="{Binding VideoPositionTime}"
        PreviewMouseLeftButtonDown="Slider_PreviewMouseLeftButtonDown"
        PreviewMouseLeftButtonUp="Slider_PreviewMouseLeftButtonUp"
        IsMoveToPointEnabled="True"
        />
        </Grid>
        
    </Grid>
</Window>
