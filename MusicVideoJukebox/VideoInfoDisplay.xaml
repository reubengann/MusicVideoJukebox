<UserControl x:Class="MusicVideoJukebox.VideoInfoDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicVideoJukebox"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400"
             d:Background="AliceBlue">
    <UserControl.Resources>
        <!-- Define a TextBlock style with white foreground -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                      ShadowDepth="1.1"
                      Direction="310"
                      Color="Black"
                      BlurRadius="0"
                        />
                </Setter.Value>
            </Setter>
            
            <Setter Property="FontSize" Value="32"/>
        </Style>
        
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="Billy Joel" FontFamily="./#Kabel-Black"/>
        <TextBlock Text="&quot;Uptown Girl&quot;"/>
        <TextBlock Text="Volume I &amp; Volume II"/>
        <TextBlock Text="1991"/>
    </StackPanel>
</UserControl>
